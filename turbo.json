{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "VERCEL_URL",
        "NEXT_PUBLIC_VERCEL_URL",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN",
        "SIMPLE_ANALYTICS_HOSTNAME",
        "NEXT_PUBLIC_SIMPLE_ANALYTICS_HOSTNAME",
        "MICROSOFT_CLIENT_ID",
        "MICROSOFT_CLIENT_SECRET",
        "VAPID_PUBLIC_KEY",
        "VAPID_PRIVATE_KEY",
        "CRON_SECRET",
        "NEXT_PUBLIC_VAPID_PUBLIC_KEY"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN",
        "SIMPLE_ANALYTICS_HOSTNAME",
        "NEXT_PUBLIC_SIMPLE_ANALYTICS_HOSTNAME",
        "MICROSOFT_CLIENT_ID",
        "MICROSOFT_CLIENT_SECRET",
        "VAPID_PUBLIC_KEY",
        "VAPID_PRIVATE_KEY",
        "CRON_SECRET",
        "NEXT_PUBLIC_VAPID_PUBLIC_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "env": ["DATABASE_URL"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "db:push": {
      "cache": false,
      "env": ["DATABASE_URL"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "db:studio": {
      "persistent": true,
      "cache": false,
      "env": ["DATABASE_URL"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    }
  }
}
